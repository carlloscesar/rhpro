# Sistema RH Pro - Configuração de Ambiente
# Copie para .env e ajuste os valores

# ===========================================
# CONFIGURAÇÃO DO BANCO DE DADOS
# ===========================================
DATABASE_URL=postgresql://rhpro_user:sua_senha_aqui@localhost:5432/rhpro_db
PGHOST=localhost
PGPORT=5432
PGDATABASE=rhpro_db
PGUSER=rhpro_user
PGPASSWORD=sua_senha_aqui

# ===========================================
# CONFIGURAÇÃO DA APLICAÇÃO
# ===========================================
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:5000

# ===========================================
# SEGURANÇA (GERE SUAS PRÓPRIAS CHAVES!)
# ===========================================
# Use: openssl rand -base64 32
JWT_SECRET=sua_chave_jwt_super_secreta_aqui_com_pelo_menos_32_caracteres
SESSION_SECRET=sua_chave_sessao_super_secreta_aqui_com_pelo_menos_32_caracteres

# ===========================================
# CONFIGURAÇÕES DE LOG
# ===========================================
LOG_LEVEL=debug

# ===========================================
# CONFIGURAÇÕES OPCIONAIS
